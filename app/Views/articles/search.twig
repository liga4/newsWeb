{% include 'Partials/navbar.twig' %}
{% include 'Partials/header.twig' %}

<section>
    <div class="articles">
        <div class="row">
            {% for article in articlesBySearch %}
            <div class="article">
                <table class="article-table">
                    <tr>
                        <td><img src="{{ article.image }}" alt="{{ article.title }}" width="200" height="250" /></td>
                    </tr>
                    <tr>
                        <th>{{ article.title }}</th>
                    </tr>
                    <tr>
                        <td>{{ article.description }}</td>
                    </tr>
                </table>
            </div>
            {% if loop.index is divisible by(4) or loop.last %}
        </div>
        <div class="row">
            {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

